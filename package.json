{
  "name": "gestao-epi-biometria-driver",
  "version": "1.0.0",
  "description": "Serviço local para comunicação com leitor biométrico via USB",
  "bin": "src/server.js",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "node build-release.js",
    "setup": "npm install && pip install -r python-core/requirements.txt",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": [
      "node_modules/axios/dist/node/axios.cjs",
      "node_modules/koffi/**/*.node",
      "src/config/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "koffi": "^2.8.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "fs-extra": "^11.3.3",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "prettier": "^3.8.1"
  },
  "author": "Equipe Gestão EPI",
  "license": "ISC"
}
