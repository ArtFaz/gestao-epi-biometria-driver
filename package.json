{
  "name": "gestao-epi-biometria-driver",
  "version": "1.0.0",
  "description": "Serviço local para comunicação com leitor biométrico via USB",
  "bin": "src/server.js",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js"
  },
  "pkg": {
    "scripts": "src/**/*.js",
    "assets": [
      "node_modules/axios/dist/node/axios.cjs",
      "node_modules/koffi/**/*.node",
      "src/config/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "koffi": "^2.8.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "author": "Equipe Gestão EPI",
  "license": "ISC"
}
